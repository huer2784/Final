    #chat{
    	width: 250px;
    }
    .chat{
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .chat li{
        margin-bottom: 10px;
        padding-bottom: 5px;
        border-bottom: 1px dotted #B3A9A9;
